<Window x:Class="BaiTapNhom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaiTapNhom"
        mc:Ignorable="d"
        Title="QUẢN LÝ NHÂN SỰ" FontSize="20" FontFamily="UTM Daxline"
        Height="768" Width="1024" ResizeMode="CanMinimize" 
        Background="WhiteSmoke" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="tempButton">
            <Setter Property="Button.Background" Value="AliceBlue"/>
            <Setter Property="Button.Foreground" Value="MediumBlue"/>
            <Setter Property="Button.FontWeight" Value="Bold"/>
            <Setter Property="Button.Height" Value="40"/>            
        </Style>
        <Style x:Key="tempTabItem">
            <Setter Property="ItemsControl.Background" Value="AliceBlue"/>
            <Setter Property="ItemsControl.Foreground" Value="MediumBlue"/>
            <Setter Property="ItemsControl.FontWeight" Value="Bold"/>
            <Setter Property="ItemsControl.Width" Value="150"/>
        </Style>
    </Window.Resources>
    <Grid>        
        <TabControl >
            <TabItem Name="tabItemThongTin" Style="{StaticResource tempTabItem}" Header="THÔNG TIN">
                <Grid Width="1024" HorizontalAlignment="Center">
                    <ListView x:Name="lstvThongTin" Width="980" Height="300"  VerticalAlignment="Bottom" Margin="18.8" SelectionChanged="lstvThongTin_SelectionChanged"  >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="STT" Width="50"></GridViewColumn>
                                <GridViewColumn Header="Họ và tên" Width="150"></GridViewColumn>
                                <GridViewColumn Header="Mã số" Width="120"></GridViewColumn>
                                <GridViewColumn Header="G.tính" Width="70"></GridViewColumn>
                                <GridViewColumn Header="Ngày sinh" Width="120"></GridViewColumn>
                                <GridViewColumn Header="Quê quán" Width="110"></GridViewColumn>
                                <GridViewColumn Header="Số điện thoại" Width="120"></GridViewColumn>
                                <GridViewColumn Header="Bộ phận" Width="120"></GridViewColumn>
                                <GridViewColumn Header="Chức vụ" Width="120"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Image  Source="Ảnh 3x4/Demo-01.png"
                            Height="140" Width="105"
                            VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,10,10,10"></Image>
                    <StackPanel Height="Auto" Width="180" HorizontalAlignment="Left" Margin="22,163,0,-119.2">
                        <Button Style="{StaticResource tempButton}" Content="THÊM NHÂN SỰ" Margin="0,0,-0.4,0"/>
                        <Button Style="{StaticResource tempButton}" Content="XÓA NHÂN SỰ"/>
                        <Button Style="{StaticResource tempButton}" Margin="0,0,-0.4,0" Content="TRA CỨU NHÂN SỰ"/>
                        <Button Style="{StaticResource tempButton}" Content="SỬA THÔNG TIN"/>
                        <Button Style="{StaticResource tempButton}" Content="XUẤT DANH SÁCH"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Style="{StaticResource tempTabItem}" Header="CHẤM CÔNG">
                <Grid Width="1024" HorizontalAlignment="Center">
                    
                </Grid>
            </TabItem>
            <TabItem Style="{StaticResource tempTabItem}" Header="KHEN THƯỞNG">
                <Grid Width="1024" HorizontalAlignment="Center">

                </Grid>
            </TabItem>
            <TabItem Style="{StaticResource tempTabItem}" Header="TỔ CHỨC">
                <Grid Width="1024" HorizontalAlignment="Center">

                </Grid>
            </TabItem>
            <TabItem Style="{StaticResource tempTabItem}" Header="CÀI ĐẶT">
                <Grid Width="1024" HorizontalAlignment="Center">

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
