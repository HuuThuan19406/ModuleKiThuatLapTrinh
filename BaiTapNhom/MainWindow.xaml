<Window x:Class="BaiTapNhom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaiTapNhom"
        mc:Ignorable="d"
        Title="QUẢN LÝ NHÂN SỰ" FontSize="20" FontFamily="UTM Daxline"
        Height="768" Width="1024" ResizeMode="CanMinimize" 
        Background="WhiteSmoke" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Foreground" Value="MediumBlue"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="35"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Foreground" Value="MediumBlue"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Name="tabItemThongTin" Header="THÔNG TIN">
                <Grid Width="1024" HorizontalAlignment="Center">
                    <ListView x:Name="lstvThongTin" Width="980" Height="300"  VerticalAlignment="Bottom" Margin="18.8">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="STT" Width="50"></GridViewColumn>
                                <GridViewColumn Header="Họ và tên" Width="150"></GridViewColumn>
                                <GridViewColumn Header="Mã số" Width="110"></GridViewColumn>
                                <GridViewColumn Header="G.tính" Width="70"></GridViewColumn>
                                <GridViewColumn Header="Ngày sinh" Width="110"></GridViewColumn>
                                <GridViewColumn Header="Quê quán" Width="110"></GridViewColumn>
                                <GridViewColumn Header="Số điện thoại" Width="140"></GridViewColumn>
                                <GridViewColumn Header="Bộ phận" Width="120"></GridViewColumn>
                                <GridViewColumn Header="Chức vụ" Width="120"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Image x:Name="imgAnhDaiDien" Source="Ảnh 3x4\Demo-01.png"
                            Height="170" Width="127.5"
                            VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,10,10,10"
                            MouseRightButtonUp="imgAnhDaiDien_MouseRightButtonUp" Stretch="UniformToFill">
                        <Image.ToolTip>
                            <ToolTip HasDropShadow="False" VerticalAlignment="Bottom">
                                Nhấp phải chuột để tải ảnh lên
                            </ToolTip>
                        </Image.ToolTip>
                    </Image>
                    <StackPanel Height="Auto" Width="180" HorizontalAlignment="Left" Margin="22,190,0,-150.2">
                        <Button Content="THÊM NHÂN SỰ"/>
                        <Button Content="XÓA NHÂN SỰ"/>
                        <Button Content="TRA CỨU NHÂN SỰ"/>
                        <Button Content="SỬA THÔNG TIN"/>
                        <Button Content="XUẤT DANH SÁCH"/>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Left" Margin="182,10,0,0" TextWrapping="Wrap" Text="Họ và tên:" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="CHẤM CÔNG">
                <Grid Width="1024" HorizontalAlignment="Center">

                </Grid>
            </TabItem>
            <TabItem Header="KHEN THƯỞNG">
                <Grid Width="1024" HorizontalAlignment="Center">

                </Grid>
            </TabItem>
            <TabItem Header="TỔ CHỨC">
                <Grid Width="1024" HorizontalAlignment="Center">

                </Grid>
            </TabItem>
            <TabItem Header="CÀI ĐẶT">
                <Grid Width="1024" HorizontalAlignment="Center">

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
